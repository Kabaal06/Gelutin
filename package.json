{
  "name": "gelutin",
  "version": "0.0.1",
  "description": "Gelutin - Wakfu Companion App",
  "author": "Kabaal06",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && wait-on http://localhost:4200 && nodemon",
    "electron:start": "concurrently \"npm start\" \"npm run electron:dev\"",
    "electron:build": "ng build --base-href ./ && npm run electron:compile",
    "electron:package": "npm run electron:build && electron-forge package",
    "electron:make": "npm run electron:build && electron-forge make"
  },
  "main": "dist/electron/main.js",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Gelutin",
        "icon": "electron/assets/images/gelutin-icon.ico"
      },
      "makers": [
        {
        "name": "@electron-forge/maker-zip",
        "platforms": [
          "win32"
        ],
        "config": {
          "name": "Gelutin",
          "icon": "electron/assets/images/gelutin-icon.ico"
        }
      }
      ]
    }
  },
  "dependencies": {
    "@angular/animations": "^20.3.9",
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "electron-store": "^11.0.2",
    "koffi": "^2.14.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.1"
  }
}